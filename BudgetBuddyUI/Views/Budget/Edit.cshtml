@model BudgetBuddyUI.Models.EditViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit line item with id @Model.Transaction.Id in your @Model.BudgetName budget</h1>

<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" name="lineItemId" value="@Model.Transaction.Id" />
            <input type="hidden" name="budgetName" value="@Model.BudgetName" />

            <div class="form-group">
                <label asp-for="Transaction.DateOfTransaction" class="control-label"></label>
                <input asp-for="Transaction.DateOfTransaction" class="form-control" />
                <span asp-validation-for="Transaction.DateOfTransaction" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Transaction.AmountOfTransaction" class="control-label"></label>
                <input asp-for="Transaction.AmountOfTransaction" class="form-control" />
                <span asp-validation-for="Transaction.AmountOfTransaction" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Transaction.DescriptionOfTransaction" class="control-label"></label>
                <input asp-for="Transaction.DescriptionOfTransaction" class="form-control" />
                <span asp-validation-for="Transaction.DescriptionOfTransaction" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Transaction.IsCredit" class="control-label"></label>
                <input asp-for="Transaction.IsCredit" value="true" name="Transaction.IsCredit" type="checkbox" checked" />
                <span asp-validation-for="Transaction.IsCredit" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <!-- 
                <input type="hidden" name="lineItemId" value="@Model.Transaction.Id" />
                <input type="hidden" name="lineItemBudgetId" value="@Model.Transaction.UserBudgetId" />
                <input type="hidden" name="lineItemDate" value="@Model.Transaction.DateOfTransaction" />
                <input type="hidden" name="lineItemAmount" value="@Model.Transaction.AmountOfTransaction" />
                <input type="hidden" name="lineItemDescription" value="@Model.Transaction.DescriptionOfTransaction" />
                <input type="hidden" name="lineItemIsCredit" value="@Model.Transaction.IsCredit" />

                -->
                
                <input type="submit" value="Update Line Item" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}